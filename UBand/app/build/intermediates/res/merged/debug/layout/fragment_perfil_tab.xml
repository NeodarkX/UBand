<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="pe.com.uband.uband.Tabs.PerfilTabFragment">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        android:scrollIndicators="none"
        android:fillViewport="false"
        android:id="@+id/scrollViewMain"
        android:scrollbars="none">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_horizontal_margin">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/pop"
                android:layout_gravity="center_horizontal"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Nombre"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:textSize="23dp"
                android:text="Content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Seguidores"
                android:layout_gravity="left"
                android:paddingTop="20dp"
                android:paddingLeft="30dp"
                android:textSize="20dp"
                android:text="Seguidores"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Miembros"
                android:layout_gravity="left"
                android:paddingTop="20dp"
                android:paddingLeft="30dp"
                android:textSize="20dp"
                android:text="Miembros"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Editar"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:background="@color/greenButton"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Salir de la banda"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@android:drawable/ic_menu_revert"
                android:background="@color/redButton"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Puesto"
                android:layout_gravity="left"
                android:paddingTop="20dp"
                android:paddingLeft="30dp"
                android:textSize="20dp"
                android:text="Puesto"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Descripcion"
                android:layout_gravity="left"
                android:paddingTop="20dp"
                android:paddingLeft="30dp"
                android:textSize="20dp"
                android:text="Descripcion"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
